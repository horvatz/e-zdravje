@model eZdravje.Models.Patient

@{
    ViewData["Title"] = "Podrobnosti o pacientu";
}

<div class="heading">
    <div class="container">
        <div class="row">
            <div class="col-12 text-white text-bold">
                <div class="heading-title">
                    <h1 class="display-5">@Html.Raw(Model.Name + " " + Model.LastName)</h1>
                    <p>Spodaj so izpisani podatki o izbranem pacientu.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row" style="margin-top: -130px">
        <div class="col-sm-8 offset-sm-2">
            <div class="card">
                <div class="card-body" style="margin: 10px">
                    <div class="col-12">
                        <h4 style="margin-bottom: 20px" class="text-center">Podatki o pacientu</h4>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th scope="row">ID</th>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Ime</th>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Priimek</th>
                                    <td>@Html.DisplayFor(model => model.LastName)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Naslov</th>
                                    <td>@Html.DisplayFor(model => model.Street)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Poštna številka</th>
                                    <td>@Html.DisplayFor(model => model.PostalCode)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Naselje</th>
                                    <td>@Html.DisplayFor(model => model.City)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Datum in ura rojstva</th>
                                    <td>@Html.DisplayFor(model => model.Birthday)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Osebni zdravnik</th>
                                    <td>
                                        @Html.DisplayFor(model => model.Specialist.Name)
                                        @Html.DisplayFor(model => model.Specialist.LastName)
                                        @Html.DisplayFor(model => model.Specialist.Id)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-center">
                            <a asp-action="Edit" asp-route-id="@Model.Id">Uredi</a> |
                            <a asp-action="Index">Nazaj na seznam</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                    
