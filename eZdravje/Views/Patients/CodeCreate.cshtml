@model eZdravje.Models.ActivationCode

@{
    ViewData["Title"] = "Nova aktivacijska koda";
}

<h1>Ustvari novo kodo</h1>

<h4>Koda se uporablja za registracijo na portal eZdravje.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CodeCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Pacient</label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.PatientId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ustvari kodo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>
