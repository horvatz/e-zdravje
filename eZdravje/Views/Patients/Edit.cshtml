@model eZdravje.Models.Patient

@{
    ViewData["Title"] = "Uredi pacienta";
}

<h1>Uredi pacienta</h1>

<h4>@Html.Raw(Model.Name + " " + Model.LastName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ime</label>
                <input asp-for="Name" required class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Priimek</label>
                <input asp-for="LastName" required class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label">Naslov</label>
                <input asp-for="Street" required class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label">Poštna številka</label>
                <input asp-for="PostalCode" required class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">Naselje</label>
                <input asp-for="City" required class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label">Datum in ura rojstva</label>
                <input asp-for="Birthday" required class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialistId" class="control-label">Osebni zdravnik</label>
                <select asp-for="SpecialistId" required class="form-control" asp-items="ViewBag.SpecialistId"></select>
                <span asp-validation-for="SpecialistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj pacienta" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
