@model eZdravje.Models.Patient

@{
    ViewData["Title"] = "Izbriši pacienta";
}

<div class="heading">
    <div class="container">
        <div class="row">
            <div class="col-12 text-white text-bold">
                <div class="heading-title">
                    <h1 class="display-5">Izbris pacienta</h1>
                    <p>Tukaj lahko izbrišete pacienta.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row" style="margin-top: -130px">
        <div class="col-sm-6 offset-sm-1">
            <div class="card">
                <div class="card-body" style="margin: 10px">
                    <div class="col-12">
                        <h4 style="margin-bottom: 20px" class="text-center">Podatki o pacientu</h4>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th scope="row">Ime</th>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Priimek</th>
                                    <td>@Html.DisplayFor(model => model.LastName)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Naslov</th>
                                    <td>@Html.DisplayFor(model => model.Street)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Poštna številka</th>
                                    <td>@Html.DisplayFor(model => model.PostalCode)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Naselje</th>
                                    <td>@Html.DisplayFor(model => model.City)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Datum in ura rojstva</th>
                                    <td>@Html.DisplayFor(model => model.Birthday)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Osebni zdravnik</th>
                                    <td>
                                        @Html.DisplayFor(model => model.Specialist.Name)
                                        @Html.DisplayFor(model => model.Specialist.LastName)
                                        @Html.DisplayFor(model => model.Specialist.Id)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <form asp-action="Delete" class="text-center">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Izbriši pacienta" class="btn btn-danger" /> |
                            <a asp-action="Index">Nazaj na seznam</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle"></i>
                    <h5 style="font-weight: 600">Pozor!</h5>
                    <p style="padding-top: 10px;">
                        Pred brisanjem je treba <b>nujno</b> izbrisati vse povezave
                        s pacientom (njegove napotnice, recepti itd.).
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
