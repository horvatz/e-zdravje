@model eZdravje.Models.Prescription

@{
    ViewData["Title"] = "Novi recept";
}

<div class="heading">
    <div class="container">
        <div class="row">
            <div class="col-12 text-white text-bold">
                <div class="heading-title">
                    <h1 class="display-5">Novi recept <i class="fas fa-folder-plus fa-sm"></i></h1>
                    <p>Recepte lahko izdajate za vse paciente v sistemu.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row" style="margin-top: -130px">
        <div class="col-sm-6 offset-sm-1 ">
            <div class="card text-center">
                <div class="card-body" style="margin: 10px">
                    <div class="col-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Naziv</label>
                                <input asp-for="Name" required class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Opis</label>
                                <input asp-for="Description" required class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Free" /> Brez doplačila (zeleni recept)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsUsed" /> Porabljen
                                </label>
                            </div>
                            <div class="from-group">
                                <label asp-for="Patient" class="control-label">Pacient</label>
                                <select asp-for="PatientId" required class="form-control" asp-items="ViewBag.PatientId">
                                    <option value="">Izberite pacienta...</option>
                                </select>
                                <span asp-validation-for="PatientId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SpecialistId" class="control-label">Izbrani zdravnik</label>
                                <select asp-for="SpecialistId" required class="form-control" asp-items="ViewBag.SpecialistId">
                                    <option value="">Izberite zdravnika...</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Ustvari recept" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-circle"></i>
                    <h5 style="font-weight: 600">Opozorilo</h5>
                    <p style="padding-top: 10px;">
                        Recepte lahko dodajate za <b>vse paciente</b> v sistemu,
                        napotnice pa le za svoje paciente.
                    </p>
                    <div>
                        <a asp-action="Index">Nazaj na seznam</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
