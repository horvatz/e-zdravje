@model eZdravje.Models.Prescription

@{
    ViewData["Title"] = "Uredi recept";
}

<h1>Uredi recept</h1>

<h4>Urejate recept številka: @Html.Raw(Model.Id)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">ID recepta</label>
                <div>@Html.DisplayFor(model => model.Id)</div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Naziv recepta</label>
                <input asp-for="Name" required class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis</label>
                <input asp-for="Description" required class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Free" /> Brez doplačila (zeleni recept)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsUsed" /> Porabljen
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SpecialistId" class="control-label">Izbrani zdravnik</label>
                <select asp-for="SpecialistId" required class="form-control" asp-items="ViewBag.SpecialistId">
                </select>
            </div>
            <div class="from-group">
                <label asp-for="Patient" class="control-label">Pacient</label>
                <select asp-for="PatientId" required class="form-control" asp-items="ViewBag.PatientId">
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Shrani" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
