@model eZdravje.Models.Referral

@{
    ViewData["Title"] = "Izbriši napotnico";
}

<h1>Izbriši napotnico</h1>

<h4>@Html.Raw($"Brišete napotnico številka: {Model.Id}")</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv napotnice
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Opis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Kategorija (1 - redno, 2 - hitro, 3 - nujno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            Porabljeno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsUsed)
        </dd>
        <dt class="col-sm-2">
            Zdravnik, ki izdaja napotnico
        </dt>
        <dd class="col-sm-10">
            @Html.Raw($"{Model.Specialist.Name} {Model.Specialist.LastName} (ID: {Model.SpecialistId}) (Ustanova: {Model.Specialist.Street})")
        </dd>
        <dt class = "col-sm-2">
            Pacient
        </dt>
        <dd class="col-sm-10">
            @Html.Raw($"{Model.Patient.Name} {Model.Patient.LastName} (ID: {Model.PatientId}) (Naslov: {Model.Patient.Street}, {Model.Patient.PostalCode} {Model.Patient.City})")
        </dd>
        <dt class = "col-sm-2">
            Namenjenu specialistu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpecialistCategory.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazaj na seznam</a>
    </form>
</div>
