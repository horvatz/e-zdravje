@model eZdravje.Models.Referral

@{
    ViewData["Title"] = "Uredi napotnico";
}

<h1>Edit</h1>

<h4>@Html.Raw($"Urejate recept številka: {Model.Id}")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Naziv napotnice</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Kategorija (1 - redno, 2 - hitro, 3 - nujno)</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsUsed" /> Porabljeno
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SpecialistId" class="control-label">Zdravnik, ki izdaja recept</label>
                <select asp-for="SpecialistId" class="form-control" asp-items="ViewBag.SpecialistId"></select>
                <span asp-validation-for="SpecialistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Pacient</label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialistCategoryId" class="control-label">Namenjeno specialistu</label>
                <select asp-for="SpecialistCategoryId" class="form-control" asp-items="ViewBag.SpecialistCategoryId"></select>
                <span asp-validation-for="SpecialistCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Shrani napotnico" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
