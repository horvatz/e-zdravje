@model eZdravje.Models.SpecialistCategory

@{
    ViewData["Title"] = "Podrobnosti o specializaciji";
}

<h1>O specializaciji</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv specializacije
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Opis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Uredi</a> |
    <a asp-action="Index">Nazaj na seznam</a>
</div>
