@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<div class="heading">
    <div class="container">
        <div class="row">
            <div class="col-12 text-white text-bold">
                <div class="heading-title">
                    <h1 class="display-5">@ViewData["Title"]</h1>
                    <p>Tukaj ustvarite svoj račun z aktivacijsko kodo</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row" style="margin-top: -130px">
        <div class="col-sm-6 offset-sm-1">
            <div class="card">
                <div class="card-body text-center" style="margin: 30px">
                    <div class="col-12">
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <h4 style="font-weight: 600">Ustvari nov račun</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email">E pošta</label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password">Geslo</label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword">Ponovi geslo</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ActivationCode">Aktivacijska koda</label>
                                <input asp-for="Input.ActivationCode" class="form-control" />
                                <span asp-validation-for="Input.ActivationCode" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Registriraj se</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-qrcode"></i>
                    <h5 style="font-weight: 600">Kaj je aktivacijska koda?</h5>
                    <p style="padding-top: 10px;">
                        Aktivacijsko kodo dobite v zdravstvenih ustanovah, s kodo si
                        ustvarite profil zdravnika ali pacienta.
                    </p>
                </div>
            </div>
        </div>
        
